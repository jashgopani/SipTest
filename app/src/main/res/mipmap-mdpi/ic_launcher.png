<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/spacing16"
    android:paddingVertical="@dimen/spacing16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing32">

        <ImageView
            android:id="@+id/cobrowsing_bajaj_top"
            android:layout_width="109dp"
            android:layout_height="43dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_bajaj_logo"
            android:visibility="visible" />

        <Button
            android:id="@+id/cobrowsing_menu_dialog_close_btn"
            android:layout_width="@dimen/close_btn"
            android:layout_height="@dimen/close_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/spacing16">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_cobrowse_logo" />

        <Button
            android:id="@+id/initiate_cobrowsing_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing8"
            android:layout_marginVertical="@dimen/spacing32"
            android:background="@drawable/blue_button_background"
            android:text="@string/inititate_cobrowsing"
            android:textAppearance="@style/TextNormal"
            android:textColor="@color/white"
            android:textSize="@dimen/font16" />

        <!--    Cobrowsing text message -->
        <LinearLayout
            android:id="@+id/cobrowsing_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width